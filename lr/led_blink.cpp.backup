#include <Arduino.h>

// Встроенный светодиод (обычно GPIO37 на T3-S3)
#define LED_PIN 37

void setup() {
  Serial.begin(115200);
  delay(1000);

  Serial.println("\n=== LED Blink Program ===");
  Serial.println("LED is blinking...");

  // Настраиваем пин светодиода как выход
  pinMode(LED_PIN, OUTPUT);
}

void loop() {
  // Включаем светодиод
  digitalWrite(LED_PIN, HIGH);
  Serial.println("LED ON");
  delay(500);  // Ждём 500 мс

  // Выключаем светодиод
  digitalWrite(LED_PIN, LOW);
  Serial.println("LED OFF");
  delay(500);  // Ждём 500 мс
}
